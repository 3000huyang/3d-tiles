{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id" : "3DTILES_implicit_tiling_scheme.tileset.schema.json",
    "title": "3DTILES_implicit_tiling_scheme tileset.json extension",
    "type": "object",
    "description" : "Specifies the implicit tiling properties.",
    "properties": {
        "tilingScheme": {
            "subdivision": "number",
            "refine": "string",
            "headCount": "array",
            "boundingVolume": "object",
            "transform": "object",
            "indexingOrigin": "array",
            "indexingDirection": "array"
        }
    },
    "required": ["subdivision",  "refine", "headCount", "boundingVolume", "indexingOrigin"],
    "additionalProperties" : false
}
